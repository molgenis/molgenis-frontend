{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "npmClientArgs": ["--frozen-lockfile"],
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "yes": true,
  "command": {
    "version": {
      "conventionalCommits": true
    },
    "bootstrap": {
      "nohoist": [
        "bootstrap-4",
        "es6-promise",
        "babel-polyfill",
        "babel-loader",
        "postcss-loader",
        "cache-loader"
      ]
    }
  }
}
