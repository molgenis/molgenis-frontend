{
    "parserOptions": {
        "ecmaFeatures": {
            "modules": true
        },
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "root": true,
    "globals": {
        "globalThis": true
    },
    "ignorePatterns": [],
    "overrides": [
        {
            "files": ["**/*.ts"],
            "parser": "@typescript-eslint/parser",
            "extends": [
                "plugin:@typescript-eslint/recommended"
            ]
        },
        {
            "parser": "vue-eslint-parser",
            "files": ["**/*.vue"],
            "extends": [
                "plugin:vue/essential",
                "@vue/standard",
                "@vue/typescript/recommended"
            ]
        }
    ]
}